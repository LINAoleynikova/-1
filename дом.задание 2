    "# print('Выберите сценарий: ')\n",
    "print('1 - колличество имён совпадает')\n",
    "print('2 - колличество имён не совпадает')\n",
    "print('3 - введу имена сам')\n",
    "choose_the_script = input('жду: ')\n",
    "print(choose_the_script)\n",
    "\n",
    "match choose_the_script:\n",
    "    case '1':\n",
    "        list_of_boys = ['Peter', 'Alex', 'John', 'Arthur', 'Richard']\n",
    "        list_of_girls = ['Kate', 'Liza', 'Kira', 'Emma', 'Trisha']\n",
    "    case '2':\n",
    "        list_of_boys = ['Peter', 'Alex', 'John', 'Arthur', 'Richard', 'Michael']\n",
    "        list_of_girls = ['Kate', 'Liza', 'Kira', 'Emma', 'Trisha']\n",
    "    case _:\n",
    "        list_of_boys = input('Введите парней: ').replace(' ', '').split(',')\n",
    "        list_of_girls = input('Введите девченок: ').replace(' ', '').split(',')\n",
    "\n",
    "if len(list_of_boys) != 0 and len(list_of_girls) != 0:\n",
    "    if len(list_of_boys) != len(list_of_girls):\n",
    "        print('Внимание, кто-то может остаться без пары.')\n",
    "    else:\n",
    "        print('Идеальные пары:')\n",
    "        i = 0\n",
    "        while i < len(list_of_boys):\n",
    "            print(list_of_boys[i] + ' и ' + list_of_girls[i])\n",
    "            i += 1"

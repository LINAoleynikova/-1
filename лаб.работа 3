    "def chocolate_divider(m, n):\n",
    "    if m <= 1 and n <= 1:\n",
    "        return 0\n",
    "\n",
    "    if m >= n:\n",
    "        ch_length = m\n",
    "        ch_width = n\n",
    "    else:\n",
    "        ch_length = n\n",
    "        ch_width = m\n",
    "\n",
    "    step = 1\n",
    "\n",
    "    if ch_width == 1:\n",
    "        total_steps = step + chocolate_divider(ch_width, ch_length - 1)\n",
    "\n",
    "    else:\n",
    "        ch_length_1 = ch_length // 2\n",
    "        ch_length_2 = ch_length // 2 + ch_length % 2\n",
    "        first_part = chocolate_divider(ch_length_1, ch_width)\n",
    "        second_part = chocolate_divider(ch_length_2, ch_width)\n",
    "        total_steps = step + first_part + second_part\n",
    "\n",
    "    return total_steps\n",
    "\n",
    "print(chocolate_divider(1, 1))"
   ]
  },
